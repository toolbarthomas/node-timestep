{
  "name": "node-timestep",
  "version": "0.1.0",
  "description": "Native Node.js timestep helper using setImmediate interval.",
  "main": "index.js",
  "type": "module",
  "exports": {
    "import": "./dist/index.js",
    "node": "./dist/index.js",
    "require": "./dist/index.cjs",
    "types": "./src/index.ts"
  },
  "files": [
    "dist/",
    "src/",
    "node/",
    "README.MD",
    "tsconfig.json"
  ],
  "scripts": {
    "pretest": "npm run tsc",
    "test": "node node/esbuild.mocha.mjs",
    "posttest": "node node_modules/mocha/bin/mocha.js \"dist/tests/*.test.js\"",
    "prebuild": "npm run test && cp ./src/_types.d.ts ./dist/_types.d.ts",
    "build": "node node/esbuild.lib.mjs && node node/esbuild.lib.mjs --minify",
    "postbuild": "node node/esbuild.lib.mjs --suffix=.cjs && node node/esbuild.lib.mjs --minify -suffix=.cjs",
    "prepublish": "npm run build",
    "prepack": "npm run build",
    "tsc": "tsc"
  },
  "keywords": [
    "timestep",
    "gameloop",
    "node"
  ],
  "author": "Thomas van der Velde <contact@toolbarthomas.net>",
  "license": "MIT",
  "devDependencies": {
    "@toolbarthomas/argumentje": "^0.1.2",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.14.2",
    "esbuild": "^0.21.5",
    "glob": "^10.4.1",
    "mocha": "^10.4.0",
    "typescript": "^5.4.5"
  }
}
